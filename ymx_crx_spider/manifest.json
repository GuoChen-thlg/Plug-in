{
    "manifest_version": 2,
    "name": "_YFN_YMX_CRX_",
    "version": "1.0",
    "description": "一款无与伦比的亚马逊库存查询扩展",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "page_action": {
        "default_icon": "img/icon.png"
    },
    "author": "THLG",
    "background": {
        "scripts": [
            "src/js/background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "cookies",
        "*://*.amazon.com/*",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.com.tr/*",
                "*://*.amazon.co.uk/*",
                "*://*.amazon.co.jp/*",
                "*://*.amazon.fr/*",
                "*://*.amazon.sg/*",
                "*://*.amazon.it/*",
                "*://*.amazon.es/*",
                "*://*.amazon.de/*",
                "*://*.amazon.ca/*",
                "*://*.amazon.sa/*",
                "*://*.amazon.com.mx/*",
                "*://*.amazon.com.br/*",
                "*://*.amazon.cn/*",
                "*://*.amazon.in/*",
                "*://*.amazon.nl/*",
                "*://*.amazon.tr/*",
                "*://*.amazon.com.au/*",
                "*://*.amazon.ae/*"
            ],
            "css": [
                "src/lib/boootstrap//bootstrap.min.css",
                "src/lib/data tables/css/jquery.dataTables.min.css",
                "src/lib/data tables/css/datatables.min.css",
                "src/lib/jquery.cxdialog/jquery.cxdialog.css",
                "src/css/style.min.css"
            ],
            "js": [
                "src/lib/jQuery/jquery-3.5.1.min.js",
                "src/lib/data tables/js/datatables.min.js",
                "src/lib/jquery.cxdialog/jquery.cxdialog.min.js",
                "src/lib/jQuery/jquery.cookie.js",
                "src/lib/jQuery/jquery.tips.js",
                "src/lib/jQuery/drag.js",
                "src/js/main.js"
            ],
            "run_at": "document_start"
        }
    ]
}